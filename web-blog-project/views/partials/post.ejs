<% if(locals.post) { %>
<div class="card">
    <div class="card-body m-3 d-flex flex-row justify-content-between align-items-center">
        <div class="card-body">
            <div class="card-title">
                <%= post.title %>
            </div>
            <div class="card-text">
                <%= post.content %>
            </div>
        </div>
        <div class="d-flex flex-row gap-3">
            <form action="/post/<%= post.id %>" method="GET">
                <button class="btn btn-secondary">
                    <i class="bi bi-pencil-fill"></i>
                    <span>Edit</span>
                </button>
            </form>
            <form action="/delete/<%= post.id %>" method="POST">
                <button class="btn btn-danger">
                    <i class="bi bi-trash2"></i>
                    <span>Delete</span>
                </button>
            </form>
        </div>
    </div>
</div>
<% } else { %>
    <h5 class="text-danger">No post found.</h5>
<% } %>